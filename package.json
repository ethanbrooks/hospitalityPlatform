{
	"name": "hotel_herrera",
	"version": "0.0.0",
	"main": "src/main",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build --stats-json --prod --delete-output-path --output-path=www --subresourceIntegrity=true",
		"deploy": "yarn run build && dev-bin/deploy.sh hotelherrera.com pp",
		"test": "ng test",
		"lint": "ng lint",
		"e2e": "ng e2e",
		"build-themes": "devextreme build",
		"postinstall": "npm run build-themes",
		"build:ssr": "npm run build:client-and-server-bundles && npm run build:server:prod",
		"serve:ssr": "node local.js",
		"build:client-and-server-bundles": "ng build --prod && ng run hotelHerrera:server:production",
		"build:server:prod": "ng run hotelHerrera:server && webpack --config webpack.server.config.js --progress --colors",
		"build:browser:prod": "ng build --prod",
		"build:prod": "npm run build:browser:prod && npm run build:server:prod",
		"build:browser:serverless": "ng build --prod --base-href /production/",
		"build:serverless": "npm run build:browser:serverless && npm run build:server:serverless",
		"build:prod:deploy": "npm run build:prod && npm run deploy",
		"build:serverless:deploy": "npm run build:serverless && npm run deploy",
		"build:server:serverless": "ng run hotelHerrera:server:serverless && webpack --config webpack.server.config.js --progress --colors"
	},
	"private": true,
	"dependencies": {
		"@angular-devkit/core": "8.1.2",
		"@angular/animations": "~8.1.3",
		"@angular/cdk": "^8.1.1",
		"@angular/common": "~8.1.3",
		"@angular/compiler": "~8.1.3",
		"@angular/core": "~8.1.3",
		"@angular/elements": "^8.1.3",
		"@angular/forms": "~8.1.3",
		"@angular/platform-browser": "~8.1.3",
		"@angular/platform-browser-dynamic": "~8.1.3",
		"@angular/platform-server": "^8.1.3",
		"@angular/pwa": "^0.801.2",
		"@angular/router": "~8.1.3",
		"@angular/service-worker": "^8.1.3",
		"@ngx-translate/core": "^11.0.1",
		"@ngx-translate/http-loader": "^4.0.0",
		"devextreme": "latest",
		"devextreme-angular": "latest",
		"devextreme-schematics": "latest",
		"msgpack5": "4.2.1",
		"ramda": "^0.26.1",
		"redux": "^4.0.4",
		"rxjs": "~6.5.2",
		"rxjs-compat": "^6.5.2",
		"tslib": "^1.10.0",
		"uppy": "^1.3.0",
		"video.js": "^7.6.0",
		"videojs-overlay": "^2.1.4",
		"videojs-playlist": "^4.3.1",
		"zone.js": "~0.10.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^0.801.3",
		"@angular/cli": "~8.1.2",
		"@angular/compiler-cli": "~8.1.3",
		"@angular/language-service": "~8.1.3",
		"@types/jasmine": "~3.3.16",
		"@types/jasminewd2": "~2.0.6",
		"@types/node": "~12.6.8",
		"codelyzer": "^5.1.0",
		"css-loader": "^3.1.0",
		"devextreme-cli": "latest",
		"jasmine-core": "~3.4.0",
		"jasmine-spec-reporter": "~4.2.1",
		"karma": "~4.2.0",
		"karma-chrome-launcher": "~3.0.0",
		"karma-cli": "^2.0.0",
		"karma-coverage-istanbul-reporter": "~2.1.0",
		"karma-jasmine": "~2.0.1",
		"karma-jasmine-html-reporter": "^1.4.2",
		"protractor": "~5.4.2",
		"ts-loader": "^6.0.4",
		"ts-node": "~8.3.0",
		"tslint": "~5.18.0",
		"typescript": "~3.4.3"
	}
}
